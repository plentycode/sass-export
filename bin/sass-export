#!/usr/bin/env node

let sassJsConverter = require('../dist').default;
let fs = require('fs');
let path =  require('path');
let minimist = require('minimist');

let options = minimist(process.argv.slice(2), {
  alias: {
    h: 'help'
  }
});

console.log(options);

let filePath = options._[0];

if (!filePath || options.help) {
  fs.createReadStream(path.resolve(__dirname, 'help.txt'))
  .pipe(process.stdout)
  .on('close', ()=> {
    throw Error('Error reading help');
  });
} else {
  let result = sassJsConverter(filePath, options);

  console.log(result);

}
